<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Info_Fragment">


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="top|center"
        android:layout_marginTop="2dp"
        app:cardCornerRadius="60dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/applogo" />


    </androidx.cardview.widget.CardView>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about"
                android:textColor="@color/black"
                android:textSize="31sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tv_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Report"
                android:textColor="@color/black"
                android:textSize="31sp"
                android:textStyle="italic" />


            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/viewbackground" />

            <LinearLayout
                android:gravity="center|start"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:onClick="sandEmail"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/emailIV"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/gmail" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="שלח לנו איימל"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/viewbackground" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center|start"
                android:onClick="openWhatsapp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/whatsappIV"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/whatsapp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_toEndOf="@+id/whatsappIV"
                    android:text="שלח לנו הודעה בווצאפ"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />



            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/viewbackground" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center|start"
                android:onClick="openMaps"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/LocationIV"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/map" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="מצא אותנו במפה"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />



            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/viewbackground" />

        </LinearLayout>



</LinearLayout>